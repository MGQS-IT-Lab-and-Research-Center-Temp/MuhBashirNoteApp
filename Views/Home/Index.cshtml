@model List<NoteApp.Models.Note.NoteViewModel>
@{
    ViewData["Title"] = "Notes List";
    int count = 1;
}

<div>
    <a asp-controller="Note" asp-action="Create" class="btn btn-outline-primary">Add New Note</a>
</div>


@if (Model is not null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Title</td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Note" asp-action="GetNoteDetail" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                        </div>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
}