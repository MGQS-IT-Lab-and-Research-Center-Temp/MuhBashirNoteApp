@model NoteApp.Models.Note.NoteViewModel

@{
    ViewData["Title"] = "Note Details";
}

<div class="body">

    @if (Model is not null)
    {
        <dl class="row">
            <dt class="col-sm-4">
                Title:
            </dt>

            <dd class="col-sm-8">
                @Model.Title
            </dd>

            <dt class="col-sm-4">
                Content:
            </dt>

            <dd class="col-sm-8">
                @Model.Content
            </dd>
        </dl>
        <br />

        <a asp-controller="Note" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary mb-3">
            Update
        </a>
        <a href="@Url.Action("Update", new { id = Model.Id})" class="btn btn-primary mb-3">Update</a>

        <form asp-action="DeleteNote" asp-route-id="@Model.Id" class="del-btn mb-3">
            <button type="submit" class="btn btn-danger">
                Delete
            </button>
        </form>
        <form action="@Url.Action("DeleteNote", new { id = Model.Id})" method="post" onsubmit="return confirm('Are you sure you want to delete this note?');">
            <input type="hidden" name="id" value="@Model.Id"/>
            <button type="submit" class="btn btn-danger mb-3">Delete</button>
        </form>

        <a asp-controller="Note" asp-action="Index" class="btn btn-secondary">
            Back to list
        </a>
    }
</div>